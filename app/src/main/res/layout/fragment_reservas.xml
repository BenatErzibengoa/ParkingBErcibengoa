<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <!-- Aquí podrías declarar el ViewModel si usas DataBinding -->
    </data>

    <LinearLayout
        android:id="@+id/reservasFragmentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:importantForAccessibility="no">

            <LinearLayout
                android:id="@+id/containerReservas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <Button
            android:id="@+id/btnNuevaReserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nueva reserva"
            android:backgroundTint="@color/blueMain"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</layout>
